<!doctype html>
<html lang="en">
  <head>
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <% if content_for?(:title) %>  
      <title><%= yield_content :title %>:: Chef Liz</title>
    <% else %>
      <title><%= current_page.data.title || "Chef Liz" %></title>
    <% end %>

    <%= stylesheet_link_tag "styles" %>
    <script src="//use.typekit.net/fit4bmi.js"></script>
    <script>try{Typekit.load();}catch(e){}</script>
  </head>

  <body>
    <div class="wrapper">
      <div class="container">
        <%= partial "partials/header" %>
        <%= yield %>
      </div>
      <div class="push"></div>
    </div>
    <div class="container">
      <%= partial "partials/footer" %>
    </div>
    <%= javascript_include_tag  "all" %>
  </body>
</html>
